<link rel='stylesheet' href='/css/login.css' />

<div class="logoPng">

</div>

<div class="containerLg">
<div class="modalTitle-container">
<h2 class='login modal-title'>Login</h2>
</div>
<div class='modal-header container'>
  <form class='modal-content login-form'>
    <div class='modal-body'>
      <div class='form-group'>
        <label for='email'>EMAIL:</label>
        <input
          type='text'
          class='form-control'
          id='email-login'
          placeholder='Enter your email'
          required
        />
      </div>
      <div class='form-group'>
        <label for='password'>PASSWORD:</label>
        <input
          type='password'
          class='form-control'
          id='password-login'
          name='password'
          autocomplete='on'
          placeholder='Enter your password'
          required
        />
        <div class="loginBtn-container">
          <button type='submit' class='login-btn btn btn-primary'>Login</button>
        </div>

      </div>
    </div>
  </form>
</div>
<section class='dont-haveAcct'>
  <h2>Don't have an account?</h2>
  <a
    href='/createAccount'
    class='createAcctBtn btn btn-primary btn-lg btn-block btn-outline-light'
  >Create an Account</a>
</section>
</div>

<script src='/js/login.js'></script>