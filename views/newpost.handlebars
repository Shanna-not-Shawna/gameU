<h3 class="card-title">Create a New Post:</h3>

<div class='post card'>
    <div class="card-body">
        <form>
            <div class="form-group">
                <label for="post-title">Post Title:</label>
                <input type="text" class="form-control" id="post-title" name="post-title" placeholder="Title...">
            </div>
            <div class="form-group">
                <label for="post-system">Game System:</label>
                <select class="form-control" name="post-system" id="post-system">
                    <option>PC</option>
                    <option>Xbox</option>
                    <option>PlayStation</option>
                    <option>Nintendo</option>
                    <option>DON'T WORRY ABOUT IT!!</option>
                </select>
            </div>
            <div class="form-group">
                <label for="post-content">Post Content:</label>
                <textarea class="form-control" id="post-content" name="post-content" rows="5"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create Post</button>
            </div>
        </form>
    </div>
</div>
<script src="/js/newpost.js"></script>